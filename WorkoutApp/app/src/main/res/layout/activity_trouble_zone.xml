<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".UI.TroubleZoneActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose your trouble zone"
            android:textColor="@android:color/black"
            android:textSize="28dp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Focus on trouble zone, save 25% of your time"
            android:layout_below="@+id/text1"
            android:gravity="center" />
        <ImageView
            android:id="@+id/image1"
            android:layout_below="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="100dp"
            android:scaleType="center"
            app:srcCompat="@drawable/unnamed" />
        <CheckBox
            android:id="@+id/ch_abs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="338dp"
            android:button="@drawable/check_box"
            android:checked="false"/>
        <CheckBox
            android:id="@+id/ch_arm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="343dp"
            android:button="@drawable/check_box"
            android:checked="false"/>
        <CheckBox
            android:id="@+id/ch_leg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="478dp"
            android:button="@drawable/check_box"
            android:checked="false"/>
        <CheckBox
            android:id="@+id/ch_chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="302dp"
            android:button="@drawable/check_box"
            android:checked="false"/>
        <RelativeLayout
            android:id="@+id/abs"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text2"
            android:layout_marginTop="70dp"
            android:background="@drawable/normal_back"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/abs_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abs"
                android:textColor="#3C3B3E"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/aaa1"
            android:layout_width="2dp"
            android:layout_height="135dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/abs"/>
        <TextView
            android:id="@+id/aaa2"
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/aaa1"/>


        <RelativeLayout
            android:id="@+id/arm"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text2"
            android:layout_marginTop="430dp"
            android:background="@drawable/normal_back"
            android:layout_marginLeft="270dp">
            <TextView
                android:id="@+id/arm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arm"
                android:textColor="#3C3B3E"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/arr"
            android:layout_width="2dp"
            android:layout_height="155dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="137dp"
            android:layout_below="@id/abs"/>
        <TextView
            android:id="@+id/arr2"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="292dp"
            android:layout_below="@id/aaa1"/>


        <RelativeLayout
            android:id="@+id/leg"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text2"
            android:layout_marginTop="380dp"
            android:background="@drawable/normal_back"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/leg_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leg"
                android:textColor="#3C3B3E"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/leg1"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="275dp"
            android:layout_below="@id/abs"/>


        <RelativeLayout
            android:id="@+id/chest"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@+id/text2"
            android:layout_marginTop="70dp"
            android:background="@drawable/normal_back"
            android:layout_marginLeft="270dp">
            <TextView
                android:id="@+id/chest_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chest"
                android:textColor="#3C3B3E"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/chest1"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="320dp"
            android:layout_below="@id/chest"/>
        <TextView
            android:id="@+id/chest2"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:background="@drawable/line_normal"
            android:layout_marginLeft="247dp"
            android:layout_below="@id/chest1"/>


    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Next"
        android:layout_below="@id/line8"
        android:layout_marginLeft="20dp"

        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/text_back" />





</LinearLayout>